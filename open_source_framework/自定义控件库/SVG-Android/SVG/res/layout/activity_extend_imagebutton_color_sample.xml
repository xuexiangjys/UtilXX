<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:svg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.github.megatronking.svg.support.extend.SVGImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_android_red"
        android:clickable="true"
        svg:svgColor="@color/selector_image_color"/>

    <com.github.megatronking.svg.support.extend.SVGImageButton
        android:id="@+id/extend_imagebutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        android:src="@drawable/ic_android_red"
        android:clickable="true"/>

    <com.github.megatronking.svg.support.extend.SVGImageButton
        android:id="@+id/extend_imagebutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        android:clickable="true"/>
</LinearLayout>