	        android:onClick="onClick"
	        android:text="ResideMenu Demo" />
	    
	    <Button
	        android:id="@+id/btn_pickerui"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="PickerIU Demo" />
	    
	    <Button
	        android:id="@+id/btn_pulllayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="PullLayout Demo" />
	    
	    <Button
	        android:id="@+id/btn_dropdownmenu"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="DropDownMenu Demo" />
	    
	    <Button
	        android:id="@+id/btn_swipemenu"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="SwipeMenu Demo" />
	    
	    <Button
	        android:id="@+id/btn_tabbar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="TabBar Demo" />
	    
	    <Button
	        android:id="@+id/btn_expandableview"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="ExpandableView Demo" />
	    
	    <Button
	        android:id="@+id/btn_viewpaperadv"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="ViewpaperAdv Demo" />
	    
	    <Button
	        android:id="@+id/btn_imagecycleview"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="ImageCycleView Demo" />
	    	     
	    <Button
	        android:id="@+id/btn_progressbutton"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
