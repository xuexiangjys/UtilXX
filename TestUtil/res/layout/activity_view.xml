<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <include layout="@layout/top_menu_bar" />
    
    <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="45dp"
       android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        
	    <Button
	        android:id="@+id/btn_customview"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="CustomView Demo" />
	    
	    <Button
	        android:id="@+id/btn_materialdesign"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="MaterialDesign Demo" />
	
	    <Button
	        android:id="@+id/btn_actionsheet"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="ActionSheet Demo" />
	
	    <Button
	        android:id="@+id/btn_gesturepassword"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="GesturePassword Demo" />
	    
	    <Button
	        android:id="@+id/btn_PatternView"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="PatternView Demo" />
	    
	    <Button
	        android:id="@+id/btn_loadingdialog"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="Loading Dialog Demo" />
	    
	    <Button
	        android:id="@+id/btn_titleBar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="TitleBar Demo" />
	    
	    <Button
	        android:id="@+id/btn_niftydialog"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="NiftyDialog Demo" />
	    
	    <Button
	        android:id="@+id/btn_flagtextview"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="FlagTextView Demo" />
	    
