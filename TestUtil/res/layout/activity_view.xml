	   <Button
	        android:id="@+id/btn_rangesliderview"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="RangeSliderView Demo" />
	   
	   <Button
	        android:id="@+id/btn_snakbar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="Snakbar Demo" />
	       
     </LinearLayout>
    </ScrollView>
    
     <com.xuexiang.view.materialdesign.view.ButtonFloat
            android:id="@+id/buttonfloat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:background="#1E88E5"
            app:animate="false"
            app:iconDrawable="@drawable/ic_action_new" />
     
</RelativeLayout>