	     <Button
	        android:id="@+id/btn_timeline"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="TimeLine Demo" />
	     
	     <Button
	        android:id="@+id/btn_guidview"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="GuidView Demo" />
	     
	     <Button
	        android:id="@+id/btn_swipelistview"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="SwipeListView Demo" />
	     
	     <Button
	        android:id="@+id/btn_swipedismisslistview"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="SwipeDismissListView Demo" />	     
	     
	     <Button
	        android:id="@+id/btn_viewPaperandgridview"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="ViewPaperAndGridView Demo" />
	     
	     <Button
	        android:id="@+id/btn_draggridView"
	        android:layout_width="match_parent"
