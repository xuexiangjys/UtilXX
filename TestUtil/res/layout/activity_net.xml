<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <include layout="@layout/top_menu_bar" />
    
     <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/settingappurl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:src="@android:drawable/ic_menu_edit" />

    </RelativeLayout>
    
     <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        
	    <Button
	        android:id="@+id/btn_volley"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="Volley Demo" />
	    
	    <Button
	        android:id="@+id/btn_asynchttp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="AsyncHttp Demo" />
	    
	    <Button
	        android:id="@+id/btn_okhttp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="OkHttp Demo" />
	    
	    <Button
	        android:id="@+id/btn_file_upload_downLoad"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="FileUpLoadAndDownLoad Demo" />
	    
	    <Button
	        android:id="@+id/btn_image_load"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onClick"
	        android:text="ImageLoader Demo" />
    
     </LinearLayout>
   </ScrollView>

</LinearLayout>